<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sujikim.ttt.MainActivity">

    <Button
        android:id="@+id/addClothesBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="옷 등록"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/clothes"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.628"/>

    <Button
        android:id="@+id/clothes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="옷 추천"
        app:layout_constraintRight_toLeftOf="@+id/addClothesBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.628"/>

    <TextView
        android:id="@+id/averTempText"
        android:layout_width="163dp"
        android:layout_height="52dp"
        android:gravity="center"
        android:text="20"
        android:textSize="36sp"
        android:layout_marginRight="151dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="91dp"
        app:layout_constraintBottom_toTopOf="@+id/clothes"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/locationText"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"/>

    <TextView
        android:id="@+id/averageTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="평균 온도"
        app:layout_constraintTop_toBottomOf="@+id/locationText"
        app:layout_constraintBottom_toTopOf="@+id/averTempText"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="258dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/locationText"
        android:layout_width="242dp"
        android:layout_height="39dp"
        android:gravity="center_vertical"
        android:text="경기도 성남시"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="125dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.47"/>
</android.support.constraint.ConstraintLayout>

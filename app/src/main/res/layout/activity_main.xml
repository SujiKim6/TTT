<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sujikim.ttt.MainActivity">

    <RelativeLayout
        android:layout_width="370dp"
        android:layout_height="498dp"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="6dp">

        <TextView
            android:id="@+id/cityName"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/clothes"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/clothes"
            android:layout_marginTop="94dp"
            android:gravity="center_vertical"
            android:text="서울특별시"
            android:textSize="22sp"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="138dp"/>

        <Button
            android:id="@+id/addClothesBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="옷 등록"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/clothes"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="307dp"
            android:layout_alignBaseline="@+id/clothes"
            android:layout_alignBottom="@+id/clothes"
            android:layout_alignRight="@+id/textView7"
            android:layout_alignEnd="@+id/textView7"/>

        <Button
            android:id="@+id/clothes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="128dp"
            android:layout_marginLeft="39dp"
            android:layout_marginStart="39dp"
            android:text="옷 추천"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/addClothesBtn"
            tools:layout_editor_absoluteY="307dp"/>

        <TextView
            android:id="@+id/weatherIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignLeft="@+id/cityName"
            android:layout_alignStart="@+id/cityName"
            android:layout_below="@+id/cityName"
            android:gravity="center"
            android:text="IC"/>

        <TextView
            android:id="@+id/highTemp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="최고기온"
            android:textSize="16sp"
            android:layout_above="@+id/lowTemp"
            android:layout_toRightOf="@+id/textView8"
            android:layout_toEndOf="@+id/textView8"/>

        <TextView
            android:id="@+id/lowTemp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="최저기온"
            android:textSize="16sp"
            android:layout_alignBottom="@+id/textView10"
            android:layout_toEndOf="@+id/textView8"
            android:layout_toRightOf="@+id/textView8"/>

        <TextView
            android:id="@+id/currentTemp"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_below="@+id/cityName"
            android:layout_toEndOf="@+id/weatherIcon"
            android:layout_toRightOf="@+id/weatherIcon"
            android:gravity="center"
            android:text="현재기온"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/lowTemp"
            android:layout_alignEnd="@+id/textView11"
            android:layout_alignRight="@+id/textView11"
            android:layout_toRightOf="@+id/highTemp"
            android:gravity="center_vertical"
            android:text="  °C"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_above="@+id/textView7"
            android:layout_toEndOf="@+id/highTemp"
            android:layout_toRightOf="@+id/highTemp"
            android:gravity="center_vertical"
            android:text="  °C"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/cityName"
            android:layout_toEndOf="@+id/currentTemp"
            android:layout_toRightOf="@+id/currentTemp"
            android:gravity="center_vertical"
            android:text="°C"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="  최고 :  "
            android:textSize="16sp"
            android:layout_below="@+id/cityName"
            android:layout_toRightOf="@+id/cityName"
            android:layout_toEndOf="@+id/cityName"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignStart="@+id/textView8"
            android:gravity="center"
            android:text="  최저 :  "
            android:textSize="16sp"
            android:layout_below="@+id/textView8"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
